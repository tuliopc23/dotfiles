[[manager.prepend_keymap]]
on   = "z"
desc = "Jump to file/directory via fzf"
run  = """
shell '
	res="$(fd --hidden --follow --exclude .git | fzf --preview "file {}")"
	if [ -n "$res" ]; then
		if [ -d "$res" ]; then
			ya pub dds-cd --str "$res"
		else
			ya pub dds-cd --str "$(dirname "$res")"
			ya pub dds-reveal --str "$res"
		fi
	fi
' --block --confirm
"""

[[manager.prepend_keymap]]
on   = "Z"
desc = "Jump to directory via fzf"
run  = """
shell '
	res="$(fd --type d --hidden --follow --exclude .git | fzf --preview "tree -L 1 {}")"
	if [ -n "$res" ]; then
		ya pub dds-cd --str "$res"
	fi
' --block --confirm
"""
[[manager.prepend_keymap]]
on = "H"
run = "plugin duckdb -1"
desc = "Scroll one column to the left"

[[manager.prepend_keymap]]
on = "L"
run = "plugin duckdb +1"
desc = "Scroll one column to the right"

